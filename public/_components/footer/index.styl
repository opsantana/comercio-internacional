.footer
	color $gray
	background-color: $white
	bottom: 0
	position: absolute
	width: 100%
	border-top: 2px solid #dadbdc
	padding: 0.25rem 1rem 0.5rem
	+above(sm)
		padding: 0.25rem 1.5rem 0.5rem
	+above(md)
		padding: 0.25rem 2% 0.5rem
	a
		text-decoration: none
		color: currentColor
	*
		font-size: 13px
		letter-spacing: 0.2px
		font-weight: 600
	.year
		font-weight: normal
		font-size: 11px
	.links
		float: right
	.credit
		opacity: 0.3
		font-weight: 400
		transition: 0.2s all
		display: none
		margin-top: 4px
		:hover
			opacity: 1
		+above(sm)
			display: block
