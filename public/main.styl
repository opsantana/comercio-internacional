@import "_mixins"
@import "_components"

html
	transition all 0.2s

body
	font-family -apple-system,BlinkMacSystemFont,'Segoe UI','Roboto','Oxygen','Ubuntu','Cantarell','Fira Sans','Droid Sans','Helvetica Neue',sans-serif;
	font-size 16px
	line-height 1.75

body, html
	height: 100%

.absolute
	position: absolute;


.airtable-embed
	height: 100% !important
	border: none

.airtable-section
	height: 100%
	height: calc(100% - 16px)
	// bottom: 70px
	display: block;

.form-section
	height: 100%
	height: calc(100% - 90px)
	bottom: 90px
	display: block;

.position_table
	top: 5px
	left: 190px
	display: none
	+above(sm)
		display: inherit;

.position_cards
	top: 5px
	left: 384px
	display: none
	+above(sm)
		display: inherit;

.btn_icon
	svg
		top 1px

.btn--invisible
	z-index: 3
	position: relative;
	display: inline-block;
	text-decoration: none
	color: #4d4d4d
	font-size: 13px
	line-height: 18px
	cursor: pointer;
	font-weight: 500
	margin-top: 4px
	margin-bottom: 4px
	margin-left: 0px
	margin-right: 8px
	padding 4px 8px
	transition: 0.1s all ease-in;
	border-radius: 3px;
	box-sizing: border-box;
	align-items: center;
	:hover, :focus
		background-color: rgba(0,0,0,0.05)
	span
		margin-left: 2px
		display: none
		+above(md)
			display: inherit;
	svg
		shape-rendering: geometricPrecision;
		position: relative;
