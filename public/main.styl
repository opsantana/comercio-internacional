@import "_mixins"
@import "_components"

html
	transition all 0.2s

body
	font-family -apple-system,BlinkMacSystemFont,'Segoe UI','Roboto','Oxygen','Ubuntu','Cantarell','Fira Sans','Droid Sans','Helvetica Neue',sans-serif
	font-size 16px
	line-height 1.75

body, html
	height 100%

.absolute
	position absolute

.airtable-embed
	height 100% !important
	border none

.airtable-section
	height 100%
	height calc(100% - 16px)
	// bottom 70px
	display block

.form-section
	height 100%
	height calc(100% - 42px)
	bottom 90px
	display block

.position-center
	bottom 3px
	right: 0
	left: inherit;
	// display none
	z-index: 3
	+above(sm)
		right: inherit;
		left 50%
		transform: translateX(-50%);

.btn_icon
	svg
		top 1px

.btn--invisible
	position relative
	display inline-block
	text-decoration none
	color #4d4d4d
	font-size 13px
	line-height 18px
	cursor pointer
	font-weight 500
	margin-top 4px
	margin-bottom 4px
	margin-left 0px
	margin-right 8px
	padding 4px 8px
	transition 0.1s all ease-in
	border-radius 3px
	box-sizing border-box
	align-items center
	user-select none
	:hover, :focus
		background-color rgba(0,0,0,0.05)
	span
		margin-left 2px
		display none
		+above(md)
			display inherit
	svg
		shape-rendering geometricPrecision
		position relative
